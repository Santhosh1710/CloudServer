<%- include ("includes/header", {"title" : "Register"}) %>

<div class="container" style="margin-top: 50px">
    <%- include ("includes/ResponseAlert", {
        "req" : req
    }) %>
    
    <div class="row">
        <div class="col-md-12">
            <form action="<%= req.URL %>/ResetPassword" method="POST">

                <input type="hidden" name="reset_token" value="<%= reset_token %>" />
                <input type="hidden" name="email" value="<%= email %>" />
                <div class="form-group">
                    <label for="">New Password</label>
                    <input type="text" placeholder="Enter new password" name="password" class="form-control" required />
                </div>
                <div class="form-group">
                    <label for="">Confirm New Password</label>
                    <input type="text" placeholder="Confirm new password" name="confirm_password" class="form-control" required />
                </div>
                <input type="submit" value="ResetPassword" class="btn-btn-primary"/>
            </form>
        </div>
    </div>
</div>

<%- include("includes/footer")%>