<%- include ("includes/header", {"title" : "Login"}) %>

<div class="container" style="margin-top: 50px">
    <%- include ("includes/ResponseAlert", {
        "req" : req
    }) %>
    
    <div class="row">
        <div class="col-md-12 sign-card">
            <form action="<%= req.URL %>/Login" method="POST" class="signform">
                <div class="form-group signforms" >
                    <label for="">Email</label>
                    <input type="email" placeholder="Enter EMail" name="email" class="form-control" required />
                </div>
                <div class="form-group signforms" >
                    <label for="">Password</label>
                    <input type="password" placeholder="Enter password" name="password" class="form-control" required />
                </div>
                <span style="display: flex;margin: 20px 0;justify-content: space-around; width: -webkit-fill-available;">
                <a class="normal-a" href="<%= req.URL %>/ForgotPassword">Forgot Password?</a>
                <a class="normal-a" href="<%= req.URL %>/Register">Click here to Register</a>
                </span>
                <button style="display: flex; justify-content: space-around;width: 200px;" type="submit" value="Login" class="btn hover-success">Login</button>
            </form>
        </div>
    </div>
</div>

<%- include("includes/footer")%>